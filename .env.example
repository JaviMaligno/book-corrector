# Core Configuration
SECRET_KEY=dev-secret-key-change-me
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require
STORAGE_DIR=./storage
LOG_LEVEL=INFO
SYSTEM_MAX_WORKERS=2
DEMO_PLAN=free  # Options: free, premium
FRONTEND_URL=http://localhost:5173

# Google Gemini (Primary LLM)
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-2.5-flash
RUN_GEMINI_INTEGRATION=0

# Azure OpenAI (Alternative LLM)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_api_key_here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_MODEL_NAME=gpt-4

# GPT-4.1 fallback
AZURE_OPENAI_FALLBACK_DEPLOYMENT_NAME=gpt-35-turbo
AZURE_OPENAI_FALLBACK_API_VERSION=2024-02-15-preview

# Render Deployment
RENDER_API_KEY=your_render_api_key_here

# Neon Auth environment variables for Next.js
NEXT_PUBLIC_STACK_PROJECT_ID=your_stack_project_id_here
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=your_stack_publishable_key_here
STACK_SECRET_SERVER_KEY=your_stack_secret_key_here

# Authentication (for testing scripts)
TOKEN=your_jwt_token_here
TEST_EMAIL=demo@example.com
TEST_PASSWORD=demo123
